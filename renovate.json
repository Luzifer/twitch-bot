{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "https://git.luzifer.io/luzifer/renovate-config/raw/branch/master/default.json"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "managerFilePatterns": [
        "docs/Makefile"
      ],
      "matchStrings": [
        "HUGO_VERSION:=(?<currentValue>[0-9\\.]+)\\s"
      ],
      "packageNameTemplate": "gohugoio/hugo"
    }
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "(^|/).github/workflows/.*"
      ],
      "schedule": [
        "* 21 * * 0"
      ]
    }
  ]
}